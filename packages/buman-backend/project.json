{
  "name": "buman-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/buman-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/buman-backend",
        "main": "packages/buman-backend/src/main.ts",
        "tsConfig": "packages/buman-backend/tsconfig.app.json",
        "assets": [
          "packages/buman-backend/src/assets"
        ],
        "isolatedConfig": true,
        "webpackConfig": "packages/buman-backend/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "buman-backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "buman-backend:build:development"
        },
        "production": {
          "buildTarget": "buman-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/buman-backend/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/buman-backend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f packages/buman-backend/Dockerfile . -t buman-backend"
    },
    "docker-push": {
      "dependsOn": [
        "docker-build"
      ],
      "command": "docker build -f packages/buman-backend/Dockerfile . -t buman-backend"
    }
  },
  "tags": []
}
